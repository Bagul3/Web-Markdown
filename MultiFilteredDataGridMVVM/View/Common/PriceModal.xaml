        <TextBlock Name="specialPrice" Margin="0,10" TextAlignment="Center" FontWeight="Bold">[Sale Price]</TextBlock>
        <Custom:DatePicker Grid.Column="0" Name="endDate" BorderBrush="Transparent" SelectedDate="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="228,45,222,370" Foreground="Black" />
        <Button Name="btnEnterName" >Enter name...</Button>
    </Grid>
</UserControl>
